<p id="notice"><%= notice %></p>
<ul class="nav nav-tabs" role="tablist">
  <li class="active"><%= link_to 'View list', sentences_path %></li>
  <li><%= link_to 'New sentence', new_sentence_path %></li>
</ul>
<br><br>
<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @sentences.each do |sentence| %>
      <tr>
        <td>
          <span class="has-tooltip" data-toggle="tooltip" data-placement="left" title="<%= "Created on #{sentence.created_at.strftime("%m/%e/%Y at %w:%M %p")}, Last modified on #{sentence.updated_at.strftime("%m/%e/%Y at %w:%M %p")}" %>">
    <%= sentence.title %>
  </span>
</td>
        <td><%= sentence.description %></td>
        <!--<td><%= link_to 'Show', sentence, class: 'btn btn-primary btn-xs' %>-->
        <td>
        <% if sentence.description? %>
          <button type="button" class="btn btn-link has-popover" data-toggle="popover" title="Description" data-content="<%= sentence.description %>">View description (popovers)</button>
<% end %> 
  </td>
        <td><%= link_to 'Edit', edit_sentence_path(sentence), class: 'btn btn-info btn-xs' %></td>
        <td><%= link_to 'Destroy', sentence, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger btn-xs' %></td>

      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New sentence', new_sentence_path, class: 'btn btn-success' %>
